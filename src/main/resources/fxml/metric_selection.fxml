<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Tile?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="600.0" prefWidth="800.0" spacing="10.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
      <children>
            <Label text="Select Metric">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
              <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="200.0" VBox.vgrow="ALWAYS">
                  <content>
                      <VBox prefHeight="200.0" prefWidth="100.0">
                          <children>
                              <Tile fx:id="burndown_tile" description="Show work and value delivered over time" title="Burndown" />
                              <Tile fx:id="cycletime_tile" description="See time to go from in-progress to done" title="Cycle Time" />
                              <Tile fx:id="leadtime_tile" description="See time from story entering the backlog to appearing in a sprint" title="Lead Time" />
                  <Separator prefWidth="200.0" />
                          </children>
                      </VBox>
                  </content>
              </ScrollPane>
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
</fx:root>
